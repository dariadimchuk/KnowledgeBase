<!-- Left-side panel -->
    <div class="split-left">
        <!-- Profile -->
        <div class="centered">
            <a href="/profile/{{profile.profileID}}">
                <object data="{{profile.profileImage}}">
                    <img src="/media/default-img.png" alt="Default Profile" />
                </object>
            </a>
            <h3>{{profile.firstName}} {{profile.lastName}}</h3>
            <p>{{profile.about}}</p>
        </div>
        <!--  Posts/Messages/Likes/Edit -->
        <div class="post-message">          <!--  Hardcoded numbers for now -->
            <a href="/post">Posts</a><p><span id="posts">{{profile.numPosts}}</span></p><br>
            <a href="/profile/{{profile.profileID}}">Messages</a><p><span id="messages">{{profile.numMessages}}</span></p><br>
            <p>Likes<span id="likes">{{profile.numLikes}}</span></p><br><br>
            <a href="/profile/{{profile.profileID}}">Edit Profile</a>
        </div>
    </div>
    
<!-- Right-side panel -->
    <div class="split-right">
        {{#if post}}  <!--All Posts-->
            <h2>All Posts</h2>
            <div class="all-posts">
                {{#each post}} <!-- PROBLEM: Showing All Posts, but want to show posts that were created by this profileID only, post is endpoint -->
                    {{> posts-partial}} <!-- posts partial --> 
                {{/each}}
            </div>
        {{else}}   <!--Timeline--> 
            <form action="/post/{{profile.profileID}}" method="POST"> <!-- FORM action/method may change -->
                <div class="timeline-section">
                    <h3 for="posttitle">What's your question today?</h3>
                    <input name="posttitle" id="posttitle" type="text" placeholder="Subject"><br>
                    <textarea name="postbody" id="postbody" type="text" placeholder="Explain in detail..."></textarea><br>
                    <select name="postcategory">
                        <option selected disabled>topic</option>
                        <option value="php">php</option>
                        <option value="nodejs">nodejs</option>
                        <option value="java">java</option>
                        <option value="sql">sql</option>
                        <option value="zend">zend</option>
                    </select>
                    <button type="submit">post to timeline</button>
                </div>
            </form>
            <!-- Latest discussions  -->
            <div class="discussions-section">
                <h3>Latest discussions</h3>
                <div class="all-posts">
                    {{#each post}} <!-- PROBLEM: not displaying in profile page -->
                        {{> posts-partial}}
                    {{/each}}
                </div>
